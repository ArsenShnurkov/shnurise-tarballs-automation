rm -rf "${S}/Directory.Build.props"
rm -rf "${S}/Directory.Build.targets"
rm -rf "${S}/NuGet.config.bootstrap"
rm -rf "${S}/PublishingProcess.txt"
rm -rf "${S}/appveyor.yml"
