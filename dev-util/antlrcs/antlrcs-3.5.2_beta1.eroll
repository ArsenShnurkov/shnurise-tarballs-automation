cd ${DIR}

find ${S}/bin/Debug

COMMAND2="/usr/bin/mono /var/tmp/tarballs/shnurise/dev-util/antlrcs/antlr-antlrcs-ca331b7/bin/Debug/Antlr3.exe"
cd ${S}/Antlr3/Grammars
