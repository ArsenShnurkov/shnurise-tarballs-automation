CATEGORY="dev-utils"
PN="antlrcs"
PV="3.5.2_beta1_p2017080216"

EGIT_ACCOUNT=antlr
EGIT_REPOSITORY=antlrcs
DISTDIR_ORIG="/var/portage-distdir"
ARCHIVE_ORIG="${DISTDIR_ORIG}/${PN}-${PV}.tar.gz.orig"

WORKDIR="/var/tmp/tarballs/shnurise/${CATEGORY}/${PN}${APPENDIX}"
